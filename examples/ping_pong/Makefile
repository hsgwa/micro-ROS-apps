-include $(TOPDIR)/Make.defs

# uROS-pingpong built-in application info

CONFIG_UROS_EXAMPLES_PINGPONG_PRIORITY ?= SCHED_PRIORITY_DEFAULT
CONFIG_UROS_EXAMPLES_PINGPONG_STACKSIZE ?= 65000

APPNAME = ping_pong
PRIORITY = $(CONFIG_UROS_EXAMPLES_PINGPONG_PRIORITY)
STACKSIZE = $(CONFIG_UROS_EXAMPLES_PINGPONG_STACKSIZE)

# uROS-pingpong Example

ASRCS =
CSRCS =
MAINSRC = main.c 

CONFIG_UROS_EXAMPLES_PINGPONG_PROGNAME ?= pingpong$(EXEEXT)
PROGNAME = $(CONFIG_UROS_EXAMPLES_PINGPONG_PROGNAME)
UROS_INCLUDES = $(shell find $(APPDIR)/$(CONFIG_UROS_DIR)/install -type d -name include)
CFLAGS += ${shell $(INCDIR) $(INCDIROPT) "$(CC)" "$(UROS_INCLUDES)"} -std=c99

MODULE = CONFIG_UROS_EXAMPLES_PINGPONG

include $(APPDIR)/Application.mk
